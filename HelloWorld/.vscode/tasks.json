{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Current Java File",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Current Java File",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin",
                "${fileBasenameNoExtension}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Compile Current Java File"
        },
        {
            "label": "Run OneMax",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin",
                "genetic.OneMax"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Compile Current Java File"
        },
        {
            "label": "Compile All Java Files",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "src/**/*.java"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$javac"]
        }
    ]
} 